<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="in.android.thinkr">

    <application
        android:allowBackup="true"
        android:icon="@drawable/thinkrlogo"
        android:label="Thinkr"
        android:roundIcon="@drawable/thinkrlogo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">

        <activity android:name="in.android.thinkr.ForgotPasswordActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name="in.android.thinkr.SignupActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name="in.android.thinkr.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>
</manifest>
